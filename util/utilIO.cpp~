void getPlyFileVcg(std::string filename, MyMesh *m){

  if(vcg::tri::io::ImporterOFF<MyMesh>::Open(m,filename)!=vcg::tri::io::ImporterOFF<MyMesh>::NoError)
    {
      printf("Error reading file  %s\n",argv[1]);
      exit(0);
    }
 
  vcg::tri::RequirePerVertexNormal(m);
  vcg::tri::UpdateNormal<MyMesh>::PerVertexNormalized(m);
}


